center: myLatLng
});

var marker = new google.maps.Marker({
position: myLatLng,
map: map,
title: 'Hello World!'
});
}

</script>
<script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBzIghUjf1-ZLpX25QQDwof9LhdzY0f6KU&callback=initMap">
